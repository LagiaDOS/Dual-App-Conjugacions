<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/filtrarTots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".80"

            android:src="@drawable/ic_baseline_filter_24" />

        <ImageView
            android:id="@+id/filtrarFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_baseline_favorite_24" />

        <ImageView
            android:id="@+id/filtrarPreu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_baseline_euro_24" />

        <ImageView
            android:id="@+id/filtrarDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_baseline_description_24" />


        <ImageView
            android:id="@+id/infoEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:src="@drawable/ic_baseline_info_24" />


    </LinearLayout>


</RelativeLayout>